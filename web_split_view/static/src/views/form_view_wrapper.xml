<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <t t-name="split_view.FormViewWrapper" owl="1">
        <t t-if="state.resId &amp;&amp; state.resModel">
            <View
                type="'split_form'"
                resModel="state.resModel"
                resId="state.resId"
                viewId="props.formViewId"
                loadActionMenus="true"
                reloadSplitListRecords="(selectedRecordId, isAfterCreate, isAfterDelete) => this.props.reloadSplitListRecords(selectedRecordId, isAfterCreate, isAfterDelete)"
                adjustChatter="()=> this.props.adjustChatter()"
                splitConfig="Object.assign({}, this.env.config)"
            />
        </t>
    </t>
</odoo>
